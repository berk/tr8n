            <% end %>   
          </td>
          <td style="text-align:left;vertical-align:top;font-size:11px;">
            <%= trn.label %>
            <% if trn.context %>
              <div style="font-size: 10px; color: grey; padding-top:3px;">
                <%=trl("Context:")%> <%= trn.context %>  
              </div>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
