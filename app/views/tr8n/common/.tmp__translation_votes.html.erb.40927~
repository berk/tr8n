        <td style="color:grey; font-size:10px; padding:5px;"><%=trl("Translation")%></td>
      </tr>  
      <% translations[0..9].each do |trn| %>
        <% style = "border-bottom:1px dotted #ccc;" unless translations.last == trn %>
        <tr style="<%=style%>">
          <td style="text-align:right;vertical-align:top; padding:3px;">
            <div id="spinner_for_<%=trn.id%>" style="display:none">
