  default_locale:           en-US        
  sitemap_path:             /config/tr8n/site/sitemap.json  
  splash_screen:            /tr8n/common/splash_screen        
  <strong>tr8n_layout:              application</strong>                            
  tr8n_helpers:             []                              
  <strong>admin_layout:             admin</strong>
  admin_helpers:            []             
