<div id="basic_info_container">
  <%=render(:partial => "header", :locals => {:section => "basic_info", :label => "Basic Information", :description => "", :mode => mode})%>
  
  <%= form_for(tr8n_current_language, :as => :language, :url => {:action => :index}, :html => {:id => 'basic_info_form', :method => :post}) do |f| %>
    <div id="basic_info_content" class="section grey">
      <div class="tr8n_fltr" style="padding-right:5px;">
          <%=tr8n_help_icon_tag %>
      </div>
      <div>
        <table cellpadding="0px" cellspacing="0px">
          <tr>
            <th class="tr8n_txtl" style="width:120px;padding:3px; vertical-align:middle;font-weight:bold;"><%=tra("Native Name:", "Language native name")%></th>
            <td class="tr8n_txtl" style="padding:3px;">
              <% if mode == :edit %>
                <%=f.text_field(:native_name)%>
              <% else %>
                <%=tr8n_current_language.native_name%>
              <% end %>
            </td>
          </tr>
          <tr>
            <th class="tr8n_txtl" style="padding:3px; vertical-align:middle;font-weight:bold;"><%=tra("Direction:", "Language direction")%></th>
            <td class="tr8n_txtl" style="padding:3px;">
              <% if mode == :edit %>
                <%=f.check_box(:right_to_left, :style=>"margin:0px; padding:0px; width:15px;") %> <%=tra("This language is read from right to left")%>
              <% else %>  
                <% if tr8n_current_language.right_to_left? %>  
                  <%=trla("This language is read from right to left")%>
                <% else %>
                  <%=trla("This language is read from left to right")%>
                <% end %>  
              <% end %>  
            </td>
          </tr>
					
					<% if Tr8n::Config.enable_fallback_languages? and not tr8n_current_language.default? %>
	          <tr>
	            <th class="tr8n_txtl" style="padding:3px; vertical-align:middle;font-weight:bold;"><%=tra("Fallback Language:", "Language to fall back onto if the language phrase is not translated")%></th>
	            <td class="tr8n_txtl" style="padding:3px;" dir="ltr">
	              <% if mode == :edit %>
	                <%=select_tag("language[fallback_language_id]", options_for_select(Tr8n::Language.options, @fallback_language.id.to_s))%>
	              <% else %>
	                <%=@fallback_language.english_name%>
	              <% end %>  
	            </td>
	          </tr>
          <% end %>
					
        </table>
      </div>
    </div>
  <% end %>
</div>