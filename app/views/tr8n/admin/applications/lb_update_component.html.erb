<div class="inner">
    <div class="hd">
        <div style="float:right;">
            <%=link_to_function(image_tag("/tr8n/images/close.gif"), "tr8nLightbox.hide();") %>
        </div>
        Component Details
    </div>
    <div class="bd">
        <% form_for(:comp, @comp, :url => {:action => :update_component}, :html => {:id => 'tr8n_form', :method => :post, :class => "tr8n"}) do |form| %>
        <%= form.hidden_field :id %>
        <%= hidden_field_tag :source_url, request.env['HTTP_REFERER'] %>
        <table class="admin_table">
            <tr>
                <th>
                    Application:
                </th>
                <td>
                    <%= select_tag "comp[application_id]", options_for_select(@apps, @comp.application_id), :style=>"width:99%;" %>
                </td>
            </tr>
            <tr>
                <th>
                    Key:
                </th>
                <td>
                    <%= form.text_field :key, :style=>"width:99%;" %>
                </td>
            </tr>
            <tr>
                <th>
                    Name:
                </th>
                <td>
                    <%= form.text_field :name, :style=>"width:99%;" %>
                </td>
            </tr>
            <tr>
                <th>
                   Description:
                </th>
                <td>
                    <%= form.text_area :description, :style=>"width:99%;" %>
                </td>
            </tr>
            <tr>
                <th>
                    State:
                </th>
                <td>
                    <%= select_tag("comp[state]", options_for_select(Tr8n::Component.state_options, @comp.state), :style=>"width:99%;") %>
                </td>
            </tr>
        </table>
        <% end %>
    </div>
    <div class="ft">
        <%= render :partial => "/tr8n/admin/common/lightbox_buttons" %>
    </div>
</div>
