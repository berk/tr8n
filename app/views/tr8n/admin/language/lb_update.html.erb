<div class="inner">
    <div class="hd">
        <div style="float:right;">
            <%=link_to_function(image_tag("/tr8n/images/close.gif"), "tr8nLightbox.hide();") %>
        </div>
        Language Details
    </div>
    <div class="bd">
        <% form_for(:language, @language, :url => {:action => :update}, :html => {:id => 'tr8n_form', :method => :post, :class => "tr8n"}) do |form| %>
        <%= form.hidden_field :id %>
        <%= hidden_field_tag :source_url, request.env['HTTP_REFERER'] %>
        <table class="admin_table">
            <tr>
                <th>
                    Locale:
                </th>
                <td>
                    <%= form.text_field :locale, :style=>"width:99%;" %>
                </td>
            </tr>
            <tr>
                <th>
                    English Name:
                </th>
                <td>
                    <%= form.text_field :english_name, :style=>"width:99%;" %>
                </td>
            </tr>
            <tr>
                <th>
                    Native Name:
                </th>
                <td>
                    <%= form.text_field :native_name, :style=>"width:99%;" %>
                </td>
            </tr>
            <tr>
                <th>
                    Right to Left:
                </th>
                <td>
                    <%= form.check_box :right_to_left, :style=>"width:20px;" %>
                </td>
            </tr>
            <tr>
                <th>
                    Enabled:
                </th>
                <td>
                    <%= form.check_box :enabled, :style=>"width:20px;" %>
                </td>
            </tr>
            <tr>
                <th>
                    Featured Index:
                </th>
                <td>
                    <%= form.text_field :featured_index %>
                </td>
            </tr>
            <tr>
                <th>
                    Google Key:
                </th>
                <td>
                    <%= form.text_field :google_key %>
                </td>
            </tr>
            <tr>
                <th>
                    Facebook Key:
                </th>
                <td>
                    <%= form.text_field :facebook_key %>
                </td>
            </tr>
        </table>
        <div>
            <em>Note: providing google key/locale will enable google suggestions for that language.</em>
        </div>
        <% end %>
    </div>
    <div class="ft">
        <%= render :partial => "/tr8n/admin/common/lightbox_buttons" %>
    </div>
</div>
