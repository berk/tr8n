<%
  links = []
  current_tab ||= ""
  [ ["Languages", {:action => :index}],
    ["Language Users", {:action => :users}],
    ["Language Rules", {:action => :rules}],
    ["Language Metrics", {:action => :metrics}],
    ["Language Charts", {:action => :charts}]].each do |link|
      if controller.action_name == link.last[:action].to_s
        current_tab = link.first if current_tab.blank?
        links << link.first
      else
        links << link_to(link.first, link.last)
      end 
   end   
%>

<h1>
  <span style="font-size:12px; float:right; padding-top:10px;">
    <%=links.join(" | ")%>
  </span>
  <%=current_tab %>
</h1>

