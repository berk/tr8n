<%= tr8n_lightbox_header_tag %>
<div class="inner">
    <div class="hd">
         <%= tr8n_lightbox_title_tag(tra("Add Sources To {comp}", nil, {:comp => @comp.name})) %>
    </div>
    <div class="bd">
        <%= form_tag({:action => :add_objects_to_component}, {:id => 'tr8n_form', :method => :post, :class => "tr8n"}) do %>
        <%= hidden_field_tag(:origin, params[:origin]) %>
        <%= hidden_field_tag :type, params[:type] %>
        <%= hidden_field_tag :comp_id, params[:comp_id] %>
        <%= hidden_field_tag :source_url, request.env['HTTP_REFERER'] %>
        <div style="max-height:340px;overflow:auto;font-size:12px;">
            <% @sources.each do |source| %>
                <div style="padding:5px; border-bottom:1px dotted #eee">
                    <%= check_box_tag("ids[]", source.id) %> &nbsp; <%= source.name_and_source %>
                </div>
            <% end %>
        </div>    
        <% end %>
    </div>
    <div class="ft">
       <%= tr8n_lightbox_buttons_tag %>
    </div>
</div>
<%= tr8n_lightbox_footer_tag %>
