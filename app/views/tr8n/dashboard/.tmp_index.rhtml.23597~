<script type="text/javascript">
   function createChart(chartId, type, url) {
      var chart = new FusionCharts("/tr8n/charts/FCF_" + type + ".swf", chartId, "150", "120");
      chart.setDataURL(url);
      chart.render(chartId);
   }
</script>

